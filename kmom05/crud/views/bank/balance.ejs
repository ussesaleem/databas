<%- include("header", {title: title}); %>

<h1>Account balance</h1>

<p>Here is the balance for the accounts.</p>

<p><i>To output the content of the account table.</i></p>

<pre><%#= JSON.stringify(res, null, 4) %></pre>

<ul>
<% for (const row of res) { %>
    <li><%= JSON.stringify(row) %></li>
<% }; %>
</ul>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Balance</th>
    </tr>
<% for (const row of res) { %>
    <tr>
        <td><a href="/bank/account/<%= row.id %>"><%= row.id %></a></td>
        <td><%= row.name %></td>
        <td class="right"><%= row.balance %></td>
        <td>
            <a href="/bank/edit/<%= row.id %>">
                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </a>
            <a href="/bank/delete/<%= row.id %>">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
            </a>
        </td>
    </tr>
<% }; %>
</table>

<p>
    <a href="index">Index</a>
</p>

<%- include("footer"); %>
